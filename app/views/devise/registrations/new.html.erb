<div class="dark:bg-black bg-white">
  <div class="auth-page">
  <div class="auth-container">

    <h2 class="auth-title-lime">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="space-y-4">

        <div>
          <%= f.label :email, class: "auth-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
        </div>

        <div>
          <%= f.label :password, class: "auth-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "auth-input" %>
          <p class="text-xs text-gray-400 mt-1">Password (6 characters minimum)</p>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "auth-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
        </div>

        <%= f.submit "Sign Up", class: "auth-button-emerald" %>

      </div>
    <% end %>

    <div class="auth-footer">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
</div>