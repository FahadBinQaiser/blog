<div class="min-h-screen flex items-center justify-center text-white px-4">
  <div class="w-full max-w-md space-y-6 p-8 bg-zinc-900 rounded-xl shadow-lg">

    <h2 class="text-3xl font-extrabold text-center text-red-500">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="space-y-4">

        <!-- Email -->
        <div>
          <%= f.label :email, class: "block mb-1 font-medium" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 rounded-lg bg-gray-800 border border-gray-600" %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, class: "block mb-1 font-medium" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 rounded-lg bg-gray-800 border border-gray-600" %>
          <p class="text-sm text-gray-400 mt-1">Password (6 characters minimum)</p>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= f.label :password_confirmation, class: "block mb-1 font-medium" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 rounded-lg bg-gray-800 border border-gray-600" %>
        </div>

        <!-- Submit -->
        <%= f.submit "Sign Up", class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>

      </div>
    <% end %>

    <div class="text-center text-sm text-white">
      <%= render "devise/shared/links" %>
    </div>
    
  </div>
</div>
