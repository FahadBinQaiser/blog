<div class="min-h-screen flex items-center justify-center text-white px-4">
  <div class="w-full max-w-md space-y-6 p-8 bg-zinc-900 rounded-xl shadow-lg">
    <h2 class="text-3xl font-extrabold text-center text-red-500">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, class: "block mb-1 font-medium" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 rounded-lg bg-gray-800 border border-gray-600" %>
        </div>

        <div>
          <%= f.label :password, class: "block mb-1 font-medium" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 rounded-lg bg-gray-800 border border-gray-600" %>
        </div>

        <%= f.submit "Log in", class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-white">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
