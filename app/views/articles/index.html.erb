<div class="max-w-4xl font-medium mx-auto px-6 py-10 space-y-10">
  <div class="text-center space-y-2">
    <h1 class="text-5xl font-extrabold text-red-500 tracking-tight">Articles</h1>
    <p class="text-lg">Our blog has <%= Article.public_count %> articles and counting!</p>
  </div>

  <ul class="space-y-2">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <li class="bg-black border-gray-200 rounded-xl p-5">
          <%= link_to article.title, article, class: "text-2xl text-white font-semibold hover:underline" %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <div class="p-0">
    <% if user_signed_in? %>
      <div class="bg-green-50 border border-green-300 rounded-xl p-6 flex items-center justify-between shadow-sm">
        <p class="text-lg text-green-800 font-semibold">
          Welcome, <%= current_user.email %>!
        </p>
        <%= button_to "Logout", destroy_user_session_path,
              method: :delete,
              form: { "data-turbo-confirm": "Are you sure you want to logout?" },
              class: "bg-red-500 cursor-pointer hover:bg-red-700 text-white font-medium py-2 px-5 rounded-lg transition duration-200" %>
      </div>
    <% else %>
      <div class="flex items-center justify-center gap-1">
        <%= link_to "Login", new_user_session_path, class: "bg-black text-white cursor-pointer hover:bg-gray-700 font-medium py-2 px-5 rounded-lg transition duration-200" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "bg-black text-white cursor-pointer hover:bg-gray-700  font-medium py-2 px-5 rounded-lg transition duration-200" %>
      </div>
    <% end %>
  </div>

  <div class="text-right">
    <%= link_to "New Article", new_article_path,
          class: "inline-block bg-black hover:bg-gray-800 text-white font-medium py-3 px-6 rounded-lg shadow-md transition duration-200" %>
  </div>
</div>
