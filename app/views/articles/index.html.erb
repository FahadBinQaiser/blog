<div class="bg-white text-black dark:bg-black">
  <div class="max-w-4xl text-center py-2 mx-auto">
    <% if user_signed_in? %>
      <span class="text-lg hidden sm:flex justify-center gap-1 dark:text-white">Welcome,
        <p class="text-black dark:text-lime-400"> <%= current_user.email %></p>
      </span>
    <% else %>
      <span class="text-lg hidden sm:block dark:text-white">Welcome, Guest</span>
    <% end %>
  </div>
</div>

<div class="min-h-screen dark:bg-black bg-white">
  <%= render "shared/navbar" %>
  
  <div class="dark:text-white pt-0 sm:pt-20 dark:bg-black">
    <div class="max-w-6xl mx-auto px-4 py-8">
      
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-gray-900 dark:text-white mb-4">
          Articles
        </h1>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @articles.each do |article| %>
          <% unless article.archived? %>
            <article class="group bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200 dark:border-gray-700 hover:border-lime-300 dark:hover:border-lime-400">
              <%= link_to article, class: "block h-full" do %>
                
                <div class="flex items-center gap-3 mb-4">
                  <div class="text-sm text-gray-500 dark:text-gray-300">
                    <%= article.created_at.strftime("%b %d, %Y") %>
                  </div>
                </div>

                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 group-hover:text-lime-600 dark:group-hover:text-lime-400 transition-colors leading-tight">
                  <%= article.title %>
                </h3>

                <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
                  <%= truncate(article.body, length: 80) %>
                </p>

                <div class="flex items-center justify-between pt-4 border-t border-gray-100 dark:border-gray-700">
                  <span class="text-lime-600 dark:text-lime-400 text-lg font-medium">
                    Read Article
                  </span>
                  <svg class="w-4 h-4 text-lime-600 dark:text-lime-400 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
                
              <% end %>
            </article>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>