<div class="min-h-screen pt-6 dark:bg-black bg-white">
  <%= render "shared/navbar" %>
  
  <div class="dark:text-white pt-0 sm:pt-20 dark:bg-black">
    <div class="max-w-6xl mx-auto px-4 py-8">
      
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-gray-900 dark:text-white mb-4">
          Articles
        </h1>
      </div>

       <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @articles.each do |article| %>
      <% unless article.archived? %>
      <article class="relative bg-gradient-to-br from-emerald-50 to-green-100 dark:from-gray-900 dark:to-gray-800 rounded-3xl p-8 shadow-xl hover:scale-105 hover:-translate-y-10 transition-transform duration-500 flex flex-col h-full">
      <%= link_to article, class: "block h-full flex flex-col" do %>
        
        <div>
        <div class="flex items-center gap-2 mb-3">
          <span class="inline-block bg-emerald-500/10 text-emerald-700 dark:text-emerald-300 px-3 py-1 rounded-full text-xs font-semibold">
          <%= article.created_at.strftime("%b %d, %Y") %>
          </span>
        </div>

        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-emerald-700 dark:group-hover:text-emerald-400 transition-colors">
          <%= truncate(article.title, length: 45) %>
        </h3>

        <p class="text-gray-700 dark:text-gray-300 text-base mb-6 line-clamp-3">
          <%= truncate(article.body, length: 100) %>
        </p>
        </div>

        <div class="mt-auto flex items-center justify-between pt-4 border-t border-emerald-200 dark:border-emerald-700">
        <span class="text-emerald-700 dark:text-emerald-400 text-base font-semibold group-hover:underline">
          Read More
        </span>
        <svg class="w-5 h-5 text-emerald-700 dark:text-emerald-400 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        </div>
        
        <div class="absolute top-4 right-4">
        <span class="inline-block bg-white dark:bg-gray-900 border border-emerald-200 dark:border-emerald-700 rounded-full px-2 py-1 text-xs text-emerald-600 dark:text-emerald-400 font-medium shadow">
          <%= article.category if article.respond_to?(:category) %>
        </span>
        </div>
        
      <% end %>
      </article>
      <% end %>
      <% end %>
    </div>
      </div>
    </div>
  </div>
</div>