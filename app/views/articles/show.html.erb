<div class="max-w-5xl mx-auto px-6 py-16 text-gray-800 dark:text-gray-100">

  <div class="mb-8">
    <%= link_to "Back to Home â†’", root_path,
      class: "inline-block text-xl font-semibold text-blue-600 hover:underline transition" %>
  </div>

  <article class="bg-white dark:bg-zinc-900 shadow-lg rounded-xl p-8 border border-gray-200 dark:border-zinc-700">
      <h2 class="font-bold text-3xl mb-4">
        <%= current_user.email.split("@").first.capitalize %>
      </h2>
    <header class="py-4">
      <h1 class="text-2xl font-bold  text-zinc-900 dark:text-white">
        <%= @article.title %>
      </h1>

    <section>
      <p class="text-xl leading-relaxed text-zinc-700 dark:text-zinc-300">
        <%= @article.body %>
      </p>
    </section>
    </header>

    <% if user_signed_in? %>
      <footer class="flex gap-4 pt-4">
        <%= link_to "Edit", edit_article_path(@article),
          class: "button hover:bg-gray-800 hover:text-white bg-black" %>

        <%= link_to "Delete", article_path(@article),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "button hover:bg-gray-800 hover:text-white bg-black" %>
      </footer>
    <% else %>
      <div class="pt-4">
        <%= link_to "Sign in to edit or delete",
          new_user_session_path,
          class: "button hover:bg-gray-800 hover:text-white bg-black" %>
      </div>
    <% end %>
  </article>

  <section class="mt-12 space-y-8">
    <h2 class="text-3xl sm:text-4xl font-black">Comments</h2>

    <div class="space-y-6">
      <%= render @article.comments %>
    </div>

    <% if user_signed_in? %>
      <div class="mt-8">
        <%= render "comments/form", article: @article %>
      </div>
    <% else %>
      <p class="text-zinc-600 dark:text-zinc-300">
        You must
        <%= link_to "log in", new_user_session_path,
          class: "text-blue-600 hover:underline font-medium" %>
        to leave a comment.
      </p>
    <% end %>
  </section>
</div>
