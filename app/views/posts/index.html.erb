<% dark_height_class = @posts.count >= 3 ? "dark:h-full" : "dark:h-screen" %>

<div class="dark:bg-black dark:text-white bg-white text-black <%= dark_height_class %>">
  <div class="max-w-5xl mx-auto px-4 py-8">

    <div class="mb-6">
      <%= render "shared/navbar" %>
    </div>

    <h1 class="text-4xl sm:text-5xl font-bold text-center mb-10">Posts</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2">
      <% @posts.each do |post| %>
        <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg overflow-hidden border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-shadow duration-300 flex flex-col">
          
          <% if post.image.attached? %>
            <div class="h-56 overflow-hidden">
              <%= image_tag post.image, class: "w-full h-full object-cover hover:scale-105 transition-transform duration-500" %>
            </div>
          <% else %>
            <div class="h-56 flex items-center justify-center bg-gray-100 dark:bg-gray-800">
              <span class="text-gray-400 italic">No image uploaded</span>
            </div>
          <% end %>

          <div class="p-5 flex flex-col flex-1">
            <div class="mb-3">
              <p class="text-sm text-gray-500 dark:text-gray-400"><%= post.created_at.strftime("%b %d, %Y") %></p>
              <h2 class="text-lg font-bold"><%= post.title %></h2>
              <p class="text-sm text-gray-600 dark:text-gray-300">By <%= post.user.email %></p>
            </div>

            <% if user_signed_in? %>
              <div class="flex items-center gap-2 mb-4">
                <%= render "likes/like_button", post: post %>
              </div>
            <% end %>

            <%= link_to "View Post", post_path(post), 
                class: "mt-auto inline-block text-center bg-black dark:bg-white text-white dark:text-black px-4 py-2 rounded-lg font-medium hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors duration-300" %>
          </div>

        </div>
      <% end %>
    </div>

  </div>
</div>
