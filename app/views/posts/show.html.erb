<h1 class="text-5xl font-bold text-black text-center py-10">
  <%= @post.title %>
</h1>

  <div class="flex justify-center items-center w-full mx-auto max-w-6xl mt-6">
  <% if @post.image.attached? %>
    <%= image_tag @post.image, 
        loading: "lazy", 
        class: "rounded-xl p-3 sm:p-0 object-cover" %>
    <% end %>
  </div>
    
<div class="text-center flex justify-center my-6">
 <%= link_to "Back to Posts", posts_path, 
          class: "flex justify-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors duration-300 font-medium" %>
</div>

