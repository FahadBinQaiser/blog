<% unless comment.archived? %>

<div class="text-2xl flex flex-col rounded-xl bg-white text-black px-4 py-2 relative">
  <div class="flex justify-between items-center w-full">
        <div class="information flex flex-row items-center space-x-8">
        <p class="text-2xl font-bold text-gray-800">
          <%= @article.user.email.split("@").first.capitalize %></p>
        <p class="text-lg text-gray-800">
          â€¢ <%= @article.created_at.strftime("%b %d, %Y") %>
        </p>
    </div>
    <div class="relative">
      <button type="button" onclick="this.nextElementSibling.classList.toggle('hidden')" class="p-2 rounded-full cursor-pointer dark:hover:bg-gray-700 text-black dark:hover:text-white focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="5" cy="12" r="1.5"/><circle cx="12" cy="12" r="1.5"/><circle cx="19" cy="12" r="1.5"/></svg>
      </button>
      <div class="absolute right-0 mt-2 bg-white border rounded shadow-lg hidden z-10">
        <%= button_to "Destroy Comment",
          [ comment.article, comment ],
          method: :delete,
          data: { turbo_confirm: "Are you sure?" },
          class: "px-20 py-4 text-sm rounded-3xl cursor-pointer text-black bg-white" %>
      </div>
    </div>
  </div>
  <p class="text-[16px]">
    <%= comment.body %>
  </p>
</div>
<% end %>