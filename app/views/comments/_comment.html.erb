<% unless comment.archived? %>

<div class="text-2xl flex flex-col rounded-xl bg-black text-white dark:bg-white dark:text-black px-4 py-2 relative">
  <div class="flex justify-between items-center w-full">
        <div class="information flex flex-row items-center space-x-8">
        <p class="text-2xl font-bold text-lime-400 dark:text-gray-800">
          <%= comment.user.email.split("@").first.capitalize %></p>
    </div>
    <div class="relative flex flex-row items-center space-x-2">
        <p class="text-sm text-white hidden sm:block dark:text-gray-800">
          <%= comment.created_at.strftime("%b %d, %Y") %>
        </p>
      <button type="button" onclick="this.nextElementSibling.classList.toggle('hidden')" class="p-2 rounded-full cursor-pointer hover:bg-white hover:text-black dark:hover:bg-black dark:hover:text-white focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="5" cy="12" r="1.5"/><circle cx="12" cy="12" r="1.5"/><circle cx="19" cy="12" r="1.5"/></svg>
      </button>
      <div class="absolute right-4 top-8 mt-2  rounded-xl shadow-lg hidden z-10">
        <%= button_to "Destroy Comment",
          [ comment.article, comment ],
          method: :delete,
          data: { turbo_confirm: "Are you sure?" },
          class: "px-6 py-2 text-[16px] rounded-sm transition duration-300 cursor-pointer bg-lime-400 text-black hover:bg-lime-500 font-bold" %>
      </div>
    </div>
  </div>
  <p class="text-[16px]">
    <%= comment.body %>
  </p>
</div>
<% end %>