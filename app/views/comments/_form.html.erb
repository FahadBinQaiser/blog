<%= form_with model: [article, article.comments.build], class: "bg-black text-white p-6 rounded-xl space-y-5" do |form| %>

  <div>
    <%= form.label :body, class: "block mb-2 text-2xl text-white font-semibold" %>
    <%= form.text_area :body, rows: 4, class: "w-full p-2 rounded-md bg-gray-900 text-white border border-gray-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
  </div>
  <div>
    <%= form.label :status, class: "block mb-2 text-2xl text-white font-semibold" %>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: "public" }, class: "w-full p-2 rounded-md bg-gray-900 text-white border border-gray-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
  </div>


  <div>
    <%= form.submit "Post Comment", class: "bg-red-600 hover:bg-red-700 text-white py-2 px-6 rounded-md font-medium transition duration-200" %>
  </div>

<% end %>
