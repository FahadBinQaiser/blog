<%= form_with model: [ article, article.comments.build ], class: "bg-black text-lime-400 dark:bg-white dark:text-black p-6 rounded-xl space-y-5" do |form| %>

  <div>
    <%= form.label :Comment, class: "block mb-2 text-2xl font-semibold" %>
    <%= form.text_area :Comment, rows: 4, class: "border text-white dark:text-black p-2 rounded-md h-40 w-full" %>
  </div>
  <div>
    <%= form.label :status, class: "block mb-2 text-2xl font-semibold" %>
    <%= form.select :status, Visible::VALID_STATUSES, 
    { selected: "public" }, 
    { class: "border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-2 text-black dark:text-white bg-white dark:bg-black" } %>
  </div>


  <div class="flex justify-end w-full">
    <%= form.submit "Post Comment", class: "button bg-lime-400 text-black dark:bg-black dark:text-white hover:bg-lime-500 dark:hover:bg-black cursor-pointer" %>
  </div>

<% end %>
